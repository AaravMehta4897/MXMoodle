<div class="legend-table mx-table">
    <table class="generaltable">
        <thead>
            <tr>
                <th class="header" colspan="2">{{# str }} checkin_weekend_calculator_legend_header, local_mxschool {{/ str }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="cell align-center">{{# str }} checkin_weekend_calculator_abbreviation_offcampus, local_mxschool {{/ str }}</td>
                <td class="cell">{{# str }} checkin_weekend_calculator_legend_offcampus, local_mxschool {{/ str }}</td>
            </tr>
            <tr>
                <td class="cell"></td>
                <td class="cell">{{# str }} checkin_weekend_calculator_legend_3_left, local_mxschool {{/ str }}</td>
            </tr>
            <tr>
                <td class="cell mx-green"></td>
                <td class="cell">{{# str }} checkin_weekend_calculator_legend_2_left, local_mxschool {{/ str }}</td>
            </tr>
            <tr>
                <td class="cell mx-yellow"></td>
                <td class="cell">{{# str }} checkin_weekend_calculator_legend_1_left, local_mxschool {{/ str }}</td>
            </tr>
            <tr>
                <td class="cell mx-red"></td>
                <td class="cell">{{# str }} checkin_weekend_calculator_legend_0_left, local_mxschool {{/ str }}</td>
            </tr>
            <tr>
                <td class="cell align-center">{{# str }} checkin_weekend_calculator_abbreviation_free, local_mxschool {{/ str }}</td>
                <td class="cell">{{# str }} checkin_weekend_calculator_legend_free, local_mxschool {{/ str }}</td>
            </tr>
            <tr>
                <td class="cell align-center">{{# str }} checkin_weekend_calculator_abbreviation_closed, local_mxschool {{/ str }}</td>
                <td class="cell">{{# str }} checkin_weekend_calculator_legend_closed, local_mxschool {{/ str }}</td>
            </tr>
        </tbody>
    </table>
</div>
