{{!
    @template local_mxschool/legend_table

    The purpose of this template is to render a table which serves as a legend.
}}

<div class="legend-table mx-table">
    <table class="generaltable">
        <thead>
            <tr>
                <th class="header" colspan="2">{{# str }} legend_header, local_mxschool {{/ str }}</th>
            </tr>
        </thead>
        <tbody>
            {{# rows }}
                <tr>
                    <td class="cell centered{{# leftclass }} {{ leftclass }}{{/ leftclass }}">{{{ lefttext }}}</td>
                    <td class="cell{{# rightclass }} {{ rightclass }}{{/ rightclass }}">{{{ righttext }}}</td>
                </tr>
            {{/ rows }}
        </tbody>
    </table>
</div>
