{{!
    @template local_mxschool/form_page

    The purpose of this template is to render a moodle form.
}}

<div class="mx-form">
    {{# topdescription }}
        <p class="topdescription">
            {{{ topdescription }}}
        </p>
    {{/ topdescription }}
    {{{ form }}}
    {{# bottomdescription }}
        <p class="bottomdescription">
            {{{ bottomdescription }}}
        </p>
    {{/ bottomdescription }}
</div>

{{# js }}
require(['local_mxschool/get_dorm_students'], function(getDormStudents) {
    getDormStudents.updateStudents();
});
require(['local_mxschool/get_esignout_driver'], function(getESignoutDriver) {
    getESignoutDriver.updateDriverFields();
});
{{/ js }}
