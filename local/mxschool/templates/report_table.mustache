{{!
    @template local_mxschool/report_table

    The purpose of this template is to render a mx table.
}}

<div class="mx-table">
    {{{ table }}}
</div>

{{# js }}
    {{# headers }}
    require(['local_mxschool/prepend_table_header'], prepend_table_header => {
        prepend_table_header.prepend({{{ headers }}});
    });
    {{/ headers }}
    {{# highlight }}
    require(['local_mxschool/highlight_cells'], highlight_cells => {
        highlight_cells.highlight({{ highlight.formatcolumn }}, {{ highlight.referencecolumn }});
    });
    {{/ highlight }}
{{/ js }}
