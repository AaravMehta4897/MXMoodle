{{!
    @template local_mxschool/selection_button

    The purpose of this template is to render a button with ajax functionality to select an option.
}}

<button class="mx-selection-button btn btn-secondary" value='{{ value }}'>{{ displaytext }}</button>

{{# js }}
require(['local_mxschool/selection_button'], function(setup) {
    setup('{{{ value }}}');
});
{{/ js }}
