{{!
    @template local_mxschool/report_filter

    The purpose of this template is to render filtering options and other interactions for a report.
}}

<div class="mx-filter noprint">
    <form action="{{ url }}">
        {{# dropdowns }}
            {{{ . }}}
        {{/ dropdowns }}
        {{# searchable }}
            <input type="text" name="search" placeholder="{{# str }} search {{/ str }}..." value="{{ search }}" />
        {{/ searchable }}
        <input type="submit" class="btn btn-primary" value="{{# str }} search {{/ str }}" />
    </form>
    <form action="{{ url }}">
        <input type="submit" class="btn btn-secondary" value="{{# str }} reset {{/ str }}" />
    </form>
    {{# printable }}
        <input type="button" class="btn btn-secondary" onclick="window.print()" value="{{# str }} print, local_mxschool {{/ str }}" />
    {{/ printable }}
    {{# addbutton }}
        <form action="{{ addbutton.url }}">
            <input type="submit" class="btn btn-secondary" value="{{ addbutton.text }}" />
        </form>
    {{/ addbutton }}
</div>
