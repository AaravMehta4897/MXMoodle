{{!
    @template local_mxschool/email_button

    The purpose of this template is to render a button with ajax functionality to send an email.
}}

<button class="mx-emailbutton" value="{{ value }}">{{# str }} email_button, local_mxschool {{/ str }}</button>

{{# js }}
    require(['local_mxschool/send_email'], (send_email) => {
        send_email.send_email('{{ emailclass }}', {{ value }});
    });
{{/ js }}
