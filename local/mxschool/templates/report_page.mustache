{{!
    @template local_mxschool/report_page

    The purpose of this template is to render a report table with filtering options.
}}

<div class="mx-report" id={{ id }}>
    <div class="mx-filter noprint">
        <form action="{{ url }}">
            {{# dropdowns }}
                {{{ . }}}
            {{/ dropdowns }}
            {{# searchable }}
                <input type="text" name="search" placeholder="{{# str }} search {{/ str }}..." value="{{ search }}" />
            {{/ searchable }}
            <input type="submit" value="{{# str }} search {{/ str }}" />
        </form>
        {{# printable }}
            <input type="button" onclick="window.print()" value="{{# str }} print, local_mxschool {{/ str }}" />
        {{/ printable }}
        {{# addtext }}
            <form action="{{ addurl }}">
                <input type="submit" value="{{ addtext }}" />
            </form>
        {{/ addtext }}
    </div>
    <div class="mx-table">
        {{{ table }}}
    </div>
</div>
