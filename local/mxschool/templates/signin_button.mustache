{{!
    @template local_mxschool/signin_button

    The purpose of this template is to render a button with ajax functionality to signin an eSignout record.
}}

<button class="mx-signin-button btn btn-secondary noprint" value="{{ value }}">{{# str }} sign_in_button, local_mxschool {{/ str }}</button>

{{# js }}
require(['local_mxschool/signin_button'], function(signinButton) {
    signinButton.signIn({{ value }});
});
{{/ js }}
